{
    "version": 2,
    "builds": [
        {
            "src": "now_build_staticfiles.sh",
            "use": "@now/static-build",
            "config": {
              "distDir": "staticfiles_build"
            }
          },
          {
            "src": "kachelin/wsgi.py",
            "use": "@ardnt/now-python-wsgi",
            "config": { "maxLambdaSize": "30mb" }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "kachelin/wsgi.py"
        }
    ]
}